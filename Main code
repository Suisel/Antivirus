import java.util.Scanner;


public class BorsheVirus {
	
	
	
	private static void printHelloPage(){
		System.out.println("This it Borsh Anti-virus");
		System.out.println("type 'exit' to exit the program");
		System.out.println("type 'add signature' to add a signature");
		System.out.println("type 'view developers' to see developers list");
		System.out.println("type 'check file' to check a file");
	}
	private static void printDevelopers(){
		System.out.println("Leader - Rita");
		System.out.println("bla bla bla");
		System.out.println("Press any key to continue");
	}
	static Scanner scan = new Scanner(System.in);
	private static String readStringIn(){
		return scan.nextLine();
	}
	private static FileChecker file;
	static Database base;
	
	public static void main(String args[]){
		base = new Database("data.txt");;
		boolean stop = false;
		String string;
		while (!stop){
			printHelloPage();
			string = readStringIn();
			if (string.equals("exit")){
				stop = true;
			}
			
			if (string.equals("view developers")){
				printDevelopers();
				readStringIn();
			}
			
			if (string.equals("add signature")){
				System.out.println("Enter signature then press enter");
				string = readStringIn();
				base.add(string);
				System.out.println(string);
				System.out.println("Added!");
			}
			
			if (string.equals("check file")){
				System.out.println("Enter file name");
				string = readStringIn();
				file = new FileChecker(string, base);
			}
		}
		base.close();
	}
}
